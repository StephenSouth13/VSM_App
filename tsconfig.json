{
  "extends": "expo/tsconfig.base",
  "compilerOptions": {
    "target": "esnext",
    "module": "esnext",
    "lib": ["dom", "esnext"],
    "jsx": "react-native",
    "strict": true,
    "moduleResolution": "nodenext", // ✅ Fix lỗi customConditions
    "esModuleInterop": true,
    "skipLibCheck": true,
    "allowJs": true,
    "noEmit": true,
    "resolveJsonModule": true,
    "forceConsistentCasingInFileNames": true
  },
  "include": ["**/*"], // ✅ Bao gồm cả .js khi chưa convert hết
  "exclude": ["node_modules"]
}
